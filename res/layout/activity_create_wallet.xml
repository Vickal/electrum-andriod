<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/MainAct">


    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:orientation="vertical"
        android:id="@+id/linearLayoutSendForm"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        >

        <EditText
            android:id="@+id/CreateWalletPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password (optional)" >
            <requestFocus />
        </EditText>




    </LinearLayout>

    <LinearLayout
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_below="@id/linearLayoutSendForm"
        android:orientation="horizontal"
        android:id="@+id/spacer1Send2">
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_blue"
        android:orientation="vertical"
        android:layout_below="@id/spacer1Send2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true">
        <Button
            android:id="@+id/CreateWalletB"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Create New wallet"
            android:background="#00000000"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>
